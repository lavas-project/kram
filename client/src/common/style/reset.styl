// 清除样式
html, body, div, span, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote,
em, img, q, small, strong, sub, sup, b, i,
dl, dt, dd, ol, ul, li,
form, label, table, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, figure,
footer, header, menu, nav, section,
audio, video
    margin 0
    padding 0
    border none
    outline none
    font-size 100%
    vertical-align baseline
    background transparent

*
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)

html
    width 100%
body
    width 100%
    line-height 1


&:focus
    outline 1

button
    outline none

canvas, section
    display block

// ul
//     list-style none


blockquote, q
    quotes none

blockquote:before, blockquote:after,
q:before, q:after
    content ''
    content none

a
    margin 0
    padding 0
    border none
    font-size 100%
    vertical-align baseline
    background transparent
    text-decoration none

table
    border-collapse collapse
    border-spacing 0


hr
    display block
    height 1px
    border none
    border-top 1px solid #cccccc
    margin 1em 0
    padding 0


input, select
    vertical-align middle
